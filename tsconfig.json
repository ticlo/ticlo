{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "es2022",
      "es2021",
      "es2020",
      "es2019",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "es"
  },
  "compileOnSave": true,
  "include": [
    "bin/**/*",
    "packages/**/*",
    "tool/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext"
    }
  }
}
