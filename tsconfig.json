{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2020",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "paths": {
      "resize-observer-polyfill": ["./@types/resize-observer-polyfill"]
    },
    "outDir": "es"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "tool/**/*",
    "example/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
