{
  "compilerOptions": {
    "target": "es2018",
    "module": "none",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "tool/**/*",
    "example/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
