{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "newLine": "lf",
    "typeRoots": [
      "../../@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "resize-observer-polyfill": ["../../@types/resize-observer-polyfill"],
      "@ticlo/*": ["../*"]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
